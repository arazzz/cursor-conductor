{
  "name": "cursor-conductor",
  "author": "arazzz",
  "version": "0.0.1",
  "description": "A simple desktop app to control mouse cursor position via keyboard shortcuts.",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.{js,cjs,mjs,ts,jsx,tsx}' --exec 'electron .'",
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "@jitsi/robotjs": "^0.6.13",
    "consola": "^3.2.3",
    "exit-hook": "^4.0.0",
    "linux-distro": "^4.0.1",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "uiohook-napi": "^1.5.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "electron": "28.0.0",
    "electron-builder": "^24.9.1",
    "bun-types": "latest"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "build": {
    "appId": "com.arazzz.cursor-conductor",
    "productName": "Cursor Conductor",
    "win": {
      "icon": "src/assets/logo.png"
    },
    "mac": {
      "icon": "src/assets/logo.png",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "icon": "src/assets/logo.png",
      "category": "Utility"
    }
  }
}
